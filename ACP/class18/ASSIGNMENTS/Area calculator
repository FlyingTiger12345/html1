        Calculator
    
    <script>
        var area , l, b, r, h
        var choice = prompt("1.Rectangle \n2.Triangle \n3.Parallelogram \n4.Circle \npick")
        if (choice == "1")
    {
        l = prompt("enter length")
        b = prompt("enter breadwth")
        erimeter = 2 * Number(b) + Number(l)
        alert("the area is"+erimeter)
    }
      else if (choice == "2")
    {
        h = prompt("enter length triangle")
        b = prompt("enter breadwth triangle ")
        r = prompt("enter raddian triangle ")
        erimeter = Number(h) + Number(b) + Number(r)
        alert("the triangle area is"+erimeter)
    }
       else if (choice == "3")
    {
        h = prompt("enter height parallelogram")
        b = prompt("enter breadwth parallelogram")
        erimeter = 2 * Number(h) + Number(b)
        alert("the parallelogram area is"+erimeter)
    }
      else if (choice == "4")
    {
        r = prompt("enter radius circle")
        erimeter = 3.14 * Math.PI * r
        alert("the circle area is"+erimeter)
    }
    
    </script>
    </body>