<!DOCTYPE html>
<html>
    <head>
        <style>
            body{
                background-color: lightblue;
            }
            div{
                text-align: center;
                margin-top: 300px;
                font-size: 100px;
            }
        </style>
    </head>
    <body>
        <div id = "sixseven"></div>

    <script>
        function showtime(){
            var d = new Date()
            var h = d.getHours()
            var m = d.getMinutes()
            var s = d.getSeconds()
            var session = "AM"
            if(h == 0)
        {
            h = 12
        }
        if (h > 0)
        {
            h = h-12
            session = "PM"
        }
       h = (h<10)? "0"+h :h;
       m = (m<10)? "0"+m :m;
       s = (s<10)? "0"+s :s;
       document.getElementById("sixseven").innerHTML = h + ":" + m + ":" + s +":" +session
       setTimeout(showtime, 1000)

        }
        showtime()
        </script>