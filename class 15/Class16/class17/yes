<!DOCTYPE html>
<html>
    <head>
        <title>Javascript</title>
    </head>
    <body>
        <div id="container">
            <div id="res"></div>
        <div id="res1"></div>
        <div id="res2"></div>
        <div id="res3"></div>
        </div>
    </body>
    <script>
        var date = new Date()
        var Day = date.getDay()
        var result
        switch (Day)
        {
            case 0:
                result = "Sunday"
                break

                case 1:
                result = "Monday"
                break

                case 2:
                result = "Tuesday"
                break

                case 3:
                result = "Wednesday"
                break

                case 4:
                result = "Thursday"
                break

                case 5:
                result = "Friday"
                break

                case 6:
                result = "Saturday"
                break

        }
        document.getElementById("res").innerHTML = result
        </script>